{
  "name": "figtok",
  "version": "1.0.0",
  "description": "Tu plugin de Figma",
  "scripts": {
    "test": "npm run tsc && npm run build",
    "format": "prettier --write .",
    "tsc": "npm run tsc:main && npm run tsc:ui",
    "tsc:main": "tsc --noEmit -p core",
    "tsc:ui": "tsc --noEmit -p .",
    "tsc:watch": "concurrently -n widget,iframe \"npm run tsc:main -- --watch --preserveWatchOutput\" \"npm run tsc:ui -- --watch --preserveWatchOutput\"",
    "build": "npm run build:ui && npm run build:main -- --minify",
    "build:main": "esbuild core/code.ts --bundle --outfile=dist/code.js",
    "build:ui": "npx vite build --minify esbuild --emptyOutDir=false",
    "build:watch": "concurrently -n widget,iframe \"npm run build:main -- --watch\" \"npm run build:ui -- --watch\"",
    "dev": "concurrently -n tsc,build,vite 'npm:tsc:watch' 'npm:build:watch' 'vite'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "author": "Daniel Aguirre",
  "license": "MIT License",
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.513.0",
    "next": "^15.3.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@figma/plugin-typings": "^1.114.0",
    "@storybook/addon-a11y": "^9.0.5",
    "@storybook/addon-docs": "^9.0.5",
    "@storybook/addon-onboarding": "^9.0.5",
    "@storybook/addon-vitest": "^9.0.5",
    "@storybook/react-vite": "^9.0.5",
    "@storybook/test-runner": "^0.22.0",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "@vitest/browser": "^3.1.4",
    "@vitest/coverage-v8": "^3.1.4",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.5",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "storybook": "^9.0.5",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-singlefile": "^2.2.0",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^3.1.4"
  }
}
